<assembly>
  <id>addon</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <includes>
        <include>license-${license.short.name}.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../jpacontainer-addon/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*-${license.short.name}-*.jar</include>
      </includes>
    </fileSet>
    <!--
    <fileSet>
      <directory>../jpacontainer-addon/target/site</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>apidocs/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../jpacontainer-demo/target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>
    -->
  </fileSets>
  <files>
    <file>
      <source>licensing-${license.short.name}.txt</source>
      <outputDirectory></outputDirectory>
      <destName>licensing.txt</destName>
    </file>
    <file>
      <source>MANIFEST.MF</source>
      <outputDirectory>META-INF</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>../jpacontainer-manual/target/docbkx/pdf/manual.pdf</source>
      <outputDirectory></outputDirectory>
      <destName>manual.pdf</destName>
    </file>
  </files>
</assembly>